<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.oluwatise.quote.Activities.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#5a1d1c1c">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainFragmentContainer">

        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/greetingText"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/textView"
                android:id="@+id/mostLikedContainer1"
                android:background="@drawable/shape1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:alpha="0">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mostLiked1"
                        android:textSize="16sp"
                        android:text=""
                        android:maxLines="3"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/mostLikedContainer2"
                android:layout_below="@id/mostLikedContainer1"
                android:background="@drawable/shape1"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:alpha="0">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mostLiked2"
                        android:textSize="16sp"
                        android:text=""
                        android:maxLines="3"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/mostLikedContainer3"
                android:layout_below="@id/mostLikedContainer2"
                android:background="@drawable/shape1"
                android:layout_marginTop="2dp"
                android:layout_centerHorizontal="true"
                android:alpha="0">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mostLiked3"
                        android:textSize="16sp"
                        android:text=""
                        android:maxLines="3"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <com.google.android.gms.ads.AdView
                android:id="@+id/bottomAdView"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                android:background="@color/lightBlue"
                ads:adUnitId="ca-app-pub-9110389779271843/1145158960">

            </com.google.android.gms.ads.AdView>


        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
